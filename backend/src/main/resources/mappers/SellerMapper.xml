<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zgqf.house.mapper.SellerMapper">

    <!-- 根据ID查询卖家信息 -->
    <select id="selectById" parameterType="int" resultType="com.zgqf.house.entity.Seller">
        SELECT * FROM seller WHERE s_id = #{sellerId}
    </select>

    <!-- 更新卖家信息 -->
    <update id="update" parameterType="com.zgqf.house.entity.Seller">
        UPDATE seller
        SET s_name = #{sName},
            s_describe = #{sDescribe},
            s_phone = #{sPhone},
            s_email = #{sEmail},
            s_website = #{sWebsite}
        WHERE s_id = #{sId}
    </update>

</mapper>
